generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model DRepStatsSnapshot {
  epoch Int @id @map("_id")

  activeCount Int
  inactiveCount Int
  retiredCount Int
  totalCount Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}

model BudgetDiscussionStatsSnapshot {
  epoch Int @id @map("_id")

  coreBudgetTotal Int
  coreTotal Int

  researchBudgetTotal Int
  researchTotal Int

  governanceSupportBudgetTotal Int
  governanceSupportTotal Int

  marketingInnovationBudgetTotal Int
  marketingInnovationTotal Int

  noneBudgetTotal Int
  noneTotal Int

  budgetTotal Int
}

model TokenomicsSnapshot {
  epoch Int @id @map("_id")

  circulatingSupply Int
  treasury Int
  reserves Int
  rewards Int

  depositStake Int
  depositDrep Int
  depositProposal Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}